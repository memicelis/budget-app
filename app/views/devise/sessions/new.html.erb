<div class="w-full mx-auto px-5 bg-white rounded-sm">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col border-b-2 m-2">
      <%= f.email_field :email, class: "border-none py-2 px-3 placeholder-custom-light", placeholder: 'Email' %>
    </div>

    <div class="flex flex-col m-2">
      <%= f.password_field :password, class: "border-none py-2 px-3 ", placeholder: 'Password' %>
    </div>

    <div class="mt-4">
      <%= f.submit "Log in", class: "py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-700 mb-4" %>
    </div>
  <% end %>
</div>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "w-full inline-block px-4 py-2 text-gray-400 transition duration-300 ease-in-out rounded-md mb-2 bg-gray-50 text-center" %>
<% end %>